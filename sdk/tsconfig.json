{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"lib": ["ES2022", "DOM"],
		"strict": true,
		"esModuleInterop": true,
		"outDir": "dist",
		"skipLibCheck": true,
		"noUncheckedIndexedAccess": false,
		"baseUrl": ".",
		"paths": {
			"worker/*": ["../worker/*"],
			"shared/*": ["../shared/*"]
		}
	},
	"include": ["src/**/*.ts", "src/**/*.d.ts"]
}
